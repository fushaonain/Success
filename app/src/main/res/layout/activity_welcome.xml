<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#0076b6">
    <ImageView
        android:id="@+id/pic_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@mipmap/welcome1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="96dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/pic_icon"
        android:layout_marginTop="32dp"
        android:text="知行合一 · 经世致用"
        android:textSize="24dp"
        android:textColor="#fff0f0"
        android:typeface="monospace"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="20dp"
        android:textColor="#faf0f0"
        android:layout_marginBottom="64dp"
        android:layout_alignParentBottom="true"
        android:typeface="sans"
        android:text="School of Foreign Languages"/>
</RelativeLayout>